{
  "schemaVersion": 1,
  "id": "sspb",
  "version": "${version}",

  "name": "Sodium Shadowy Path Blocks",
  "description": "SSPB reintroduces vanilla-like smooth lighting to non-full blocks (e.g. dirt paths and how they have dark shading when directly next to a full block) when using Sodium.",
  "authors": [
    "Rynnavinx"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/sodium-shadowy-path-blocks",
    "sources": "https://github.com/Rynnavinx/sodium-shadowy-path-blocks",
    "issues": "https://github.com/Rynnavinx/sodium-shadowy-path-blocks/issues"
  },

  "license": "LGPLv3",
  "icon": "assets/sspb/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "rynnavinx.sspb.client.SSPBClientMod"
    ]
  },
  "mixins": [
    "sspb.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.10",
    "java": ">=17",

    "sodium": [
      ">=0.4.3"
    ]
  },

  "suggests": {
    "indium": "*",
    "fabric-api": "*"
  }
}
